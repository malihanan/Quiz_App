<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="QuestionCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:elevation">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">100dp</item>
    </style>

    <style name="ScoreCardStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/colorSuccessLight</item>
        <item name="android:elevation">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>


    <style name="CustomTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="CustomBigTextStyle" parent="CustomTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="AnswerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="RadioButtonStyle" parent="CustomTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ErrorTextStyle" parent="CustomTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CustomButtonStyle" parent="CustomTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ScoreMainTextStyle" parent="CustomTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSuccess</item>
    </style>

    <style name="ScoreTextStyle" parent="CustomTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">56sp</item>
    </style>
</resources>
